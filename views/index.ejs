<html lang="en">
  <head></head>
  <body>
    <% if (locals.error) { %>
      <div style="color: red;"><%= error %></div>
    <% } %>
    <form method="post" action="/login">
      <p>
        <label for="username">Username</label>
        <input type="text" name="username"/>
      </p>
      <p>
        <label for="password">Password</label>
        <input type="password" name="password"/>
      </p>
      <input type="submit"/>
    </form>
  </body>
</html>
